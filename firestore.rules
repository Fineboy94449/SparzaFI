rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Helper function to check if user is verified (KYC)
    function isVerified() {
      return isAuthenticated() &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.is_verified == true;
    }

    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }

    // Products collection
    match /products/{productId} {
      allow read: if true; // Public read
      allow create: if isAuthenticated() && isVerified();
      allow update: if isAuthenticated() &&
                      (resource.data.seller_id == request.auth.uid || isAdmin());
      allow delete: if isAuthenticated() &&
                      (resource.data.seller_id == request.auth.uid || isAdmin());
    }

    // Orders/Transactions collection
    match /transactions/{transactionId} {
      allow read: if isAuthenticated() &&
                    (resource.data.buyer_id == request.auth.uid ||
                     resource.data.seller_id == request.auth.uid ||
                     resource.data.deliverer_id == request.auth.uid ||
                     isAdmin());
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() &&
                      (resource.data.buyer_id == request.auth.uid ||
                       resource.data.seller_id == request.auth.uid ||
                       resource.data.deliverer_id == request.auth.uid ||
                       isAdmin());
      allow delete: if isAdmin();
    }

    // Sellers collection
    match /sellers/{sellerId} {
      allow read: if true; // Public read for seller profiles
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() &&
                      (resource.data.user_id == request.auth.uid || isAdmin());
      allow delete: if isAdmin();
    }

    // Deliverers collection
    match /deliverers/{delivererId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() &&
                      (resource.data.user_id == request.auth.uid || isAdmin());
      allow delete: if isAdmin();
    }

    // Conversations collection (Chat)
    match /conversations/{conversationId} {
      allow read: if isAuthenticated() &&
                    (resource.data.user1_id == request.auth.uid ||
                     resource.data.user2_id == request.auth.uid ||
                     resource.data.buyer_id == request.auth.uid ||
                     resource.data.seller_id == request.auth.uid ||
                     resource.data.deliverer_id == request.auth.uid ||
                     isAdmin());
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() &&
                      (resource.data.user1_id == request.auth.uid ||
                       resource.data.user2_id == request.auth.uid ||
                       resource.data.buyer_id == request.auth.uid ||
                       resource.data.seller_id == request.auth.uid ||
                       resource.data.deliverer_id == request.auth.uid);
      allow delete: if isAdmin();
    }

    // Messages collection (Chat)
    match /messages/{messageId} {
      allow read: if isAuthenticated() &&
                    (resource.data.sender_id == request.auth.uid ||
                     resource.data.recipient_id == request.auth.uid ||
                     isAdmin());
      allow create: if isAuthenticated() && request.resource.data.sender_id == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.recipient_id == request.auth.uid; // For marking as read
      allow delete: if isAdmin();
    }

    // Reviews collection
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && resource.data.user_id == request.auth.uid;
      allow delete: if isAdmin();
    }

    // Notifications collection
    match /notifications/{notificationId} {
      allow read: if isAuthenticated() && resource.data.user_id == request.auth.uid;
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && resource.data.user_id == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.user_id == request.auth.uid;
    }

    // Delivery routes collection
    match /delivery_routes/{routeId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && isVerified();
      allow update: if isAuthenticated() && resource.data.deliverer_id == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.deliverer_id == request.auth.uid;
    }

    // Verification submissions collection
    match /verification_submissions/{submissionId} {
      allow read: if isAuthenticated() &&
                    (resource.data.user_id == request.auth.uid || isAdmin());
      allow create: if isAuthenticated();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // Delivery tracking collection
    match /delivery_tracking/{trackingId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && isVerified();
      allow update: if isAuthenticated() && isVerified();
      allow delete: if isAdmin();
    }

    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
