# SparzaFI Platform Environment Configuration
# Copy this file to .env and update with your actual values

# ==================== FLASK CLI SETTINGS ====================
# Required for 'flask run' command
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=1
FLASK_RUN_HOST=0.0.0.0
FLASK_RUN_PORT=5000

# ==================== SECURITY ====================
# Generate a secure random key: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here-change-this-in-production
PASSWORD_SALT=sparzafi_salt_2025

# ==================== FIREBASE CONFIGURATION (REQUIRED) ====================
# SparzaFI now uses Firebase Firestore exclusively (SQLite has been replaced)
# Download service account JSON from Firebase Console → Project Settings → Service Accounts
# REQUIRED: Set these values or the app will not start
FIREBASE_SERVICE_ACCOUNT=firebase-service-account.json
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com

# ==================== API KEYS ====================
# Google Maps API Key for delivery tracking
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# ==================== EMAIL CONFIGURATION ====================
# For email verification and notifications
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@sparzafi.com

# ==================== PAYMENT GATEWAYS (Optional) ====================
# South African Payment Providers
# OZOW_API_KEY=your-ozow-api-key
# OZOW_SITE_CODE=your-ozow-site-code
# YOCO_SECRET_KEY=your-yoco-secret-key

# ==================== PLATFORM SETTINGS ====================
PLATFORM_NAME=SparzaFI
COMMISSION_RATE=0.065
DELIVERER_FEE_RATE=0.10
VAT_RATE=0.15

# ==================== FINTECH CONFIGURATION ====================
TOKEN_NAME=Sparza Token
TOKEN_SYMBOL=SPZ
INITIAL_TOKEN_BALANCE=1500.0
SPZ_TO_RAND_RATE=1.0
REFERRAL_BONUS_SPZ=5.0
LOYALTY_POINTS_PER_RAND=0.01

# ==================== FILE UPLOAD ====================
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=static/uploads

# ==================== PAGINATION ====================
PRODUCTS_PER_PAGE=20
TRANSACTIONS_PER_PAGE=50
MESSAGES_PER_PAGE=20

# ==================== PRODUCTION SETTINGS ====================
# Uncomment and configure for production deployment
# SESSION_COOKIE_SECURE=True
# SESSION_COOKIE_HTTPONLY=True
# SESSION_COOKIE_SAMESITE=Lax

# ==================== MONITORING & LOGGING ====================
# LOG_LEVEL=INFO
# LOG_FILE=sparzafi.log

# ==================== NOTES ====================
# 1. NEVER commit the .env file to version control
# 2. Add .env to your .gitignore file
# 3. Generate secure random keys for production
# 4. Use environment-specific configurations
# 5. Rotate keys regularly in production
